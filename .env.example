# ===========================================
# UNS-ClaudeJP 4.2 - Environment Variables
# ===========================================
# IMPORTANTE: Copia este archivo a .env y rellena con tus valores reales
# NUNCA commitees el archivo .env al repositorio

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=uns_claudejp
POSTGRES_USER=uns_admin
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_MIN_32_CHARS
DATABASE_URL=postgresql://uns_admin:CHANGE_THIS_TO_STRONG_PASSWORD_MIN_32_CHARS@db:5432/uns_claudejp

# ===========================================
# SECURITY
# ===========================================
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=UNS-ClaudeJP 4.2
APP_VERSION=4.2.0
ENVIRONMENT=development
DEBUG=true
FRONTEND_URL=http://localhost:3000

# ===========================================
# FILE UPLOAD
# ===========================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760

# ===========================================
# OCR SERVICES
# ===========================================
OCR_ENABLED=true
TESSERACT_LANG=jpn+eng

# Azure Computer Vision API (opcional)
AZURE_COMPUTER_VISION_ENDPOINT=https://YOUR_RESOURCE_NAME.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=YOUR_AZURE_KEY_HERE
AZURE_COMPUTER_VISION_API_VERSION=2023-02-01-preview

# Gemini API (opcional)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Google Cloud Vision API (opcional)
GOOGLE_CLOUD_VISION_ENABLED=false
GOOGLE_CLOUD_VISION_API_KEY=YOUR_GOOGLE_CLOUD_KEY_HERE

# ===========================================
# NOTIFICATIONS (opcional)
# ===========================================
LINE_CHANNEL_ACCESS_TOKEN=YOUR_LINE_CHANNEL_TOKEN_HERE
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@uns-kikaku.com

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/uns-claudejp.log

# ===========================================
# COMPANY INFO
# ===========================================
COMPANY_NAME=UNS-Kikaku
COMPANY_WEBSITE=https://www.uns-kikaku.com

# ===========================================
# FRONTEND (Next.js)
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_VERSION=4.2.0
NEXT_PUBLIC_APP_NAME=UNS-ClaudeJP 4.2
